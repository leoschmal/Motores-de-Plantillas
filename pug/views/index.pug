html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    header(class='container-fluid bg-light') 
        h1(class="text-center")= 'Ejecutando plantillas con Pug' 
    body
        if changeView               
            if productos.length !== 0
                h1(class="text-center")= 'Productos'
                form(action="/productos" method="get")
                    button(id='change2' class="btn btn-info")= 'Ingresar Productos' 
                div(class="table-responsive")
                    table(class="table table-dark")
                        tr(style="color: yellow;") 
                            th= 'Producto'
                            th= 'Precio' 
                            th= 'Imagen'
                                each producto in productos
                                    tr
                                        td= producto.title
                                        td= producto.price
                                        td 
                                            img(src= producto.url alt=producto.title width="30" height="30")
            else
                h3(style="color: black")= 'No hay Productos'
        else 
            h1(class="text-center")= 'Ingrese Producto'
            form(action="/productos" method="get")
                button(id='change2' class="btn btn-info")= 'Ver Productos'
            form(action="/productos" method="post")
                div(class="form-group")
                    label(for="title")= 'Titulo'
                    input(id="title" class="form-control" type="text" name="title")
                div(class="form-group")
                    label(for="price")='Precio'
                    input(id="price" class="form-control" type="text" name="price")                
                div(class="form-group")
                    label(for="url")='Url'
                    input(id="url" class="form-control" type="text" name="url")                
                    button(class="btn btn-success mt-3 mb-5")= 'Enviar'
            
        
