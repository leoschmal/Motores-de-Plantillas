<h3 class="text-center">Listado de Productos</h3>
<form action="/productos" method="get">
            <button id='change' class="btn btn-info">Ingresar Producto</button>
        </form>
{{#if productos}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Producto</th> <th>Precio</th> <th>Imagen</th> </tr>
           {{#each productos}}
            <tr>
                <td> {{this.title}} </td>
                <td> {{this.price}} </td>
                <td> <img src= {{this.url}} alt={{this.title}} width="30" height="30"></td>
            </tr>
            {{/each}}
        </table>
    </div>
{{else}}
   <h3 style="color: black">No hay Productos</h3>
{{/if}}
